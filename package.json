{
	"name": "calculadora-relogio-de-ponto-electron",
	"author": "Danilo Ribeiro",
	"version": "1.0.0",
	"description": "Calculadora de Horas Trabalhadas",
	"main": "./.webpack/main/index.js",
	"scripts": {
		"start": "electron-forge start",
		"package": "electron-forge package",
		"make": "electron-forge make",
		"release": "electron-forge publish",
		"lint": "eslint . --ext js,ts",
		"test": "jest",
		"pack": "electron-builder --dir",
		"dist": "electron-builder"
	},
	"build": {
		"appId": "com.calculadoradehoras.app",
		"productName": "Calculadora de Horas",
		"copyright": "Danilo Ribeiro",
		"mac": {
			"category": "public.app-category.productivity",
			"icon": "./assets/calculator.png"
		},
		"win": {
			"appId": "DaniloRibeiro.CalculadoraDeHoras.App.v1",
			"target": "nsis",
			"icon": "./assets/calculator.png",
			"publisherName": "Danilo Ribeiro"
		},
		"nsis": {
			"oneClick": false,
			"perMachine": true,
			"allowToChangeInstallationDirectory": true,
			"installerIcon": "./assets/favicon.ico",
			"uninstallerIcon": "./assets/favicon.ico",
			"installerSidebar": "./assets/installerSidebar.bmp",
			"uninstallerSidebar": "./assets/installerSidebar.bmp",
			"uninstallDisplayName": "Calculadora de Horas Trabalhadas",
			"license": "./assets/license.txt",
			"include": "./assets/installer.nsh"
		},
		"linux": {
			"target": "AppImage",
			"icon": "./assets/calculator.png",
			"category": "Utility"
		}
	},
	"keywords": [],
	"license": "MIT",
	"dependencies": {
		"react": "17.0.2",
		"react-dom": "17.0.2",
		"react-hot-loader": "4.13.0",
		"styled-components": "5.3.0"
	},
	"devDependencies": {
		"@babel/core": "7.14.6",
		"@babel/plugin-transform-runtime": "7.14.5",
		"@babel/preset-env": "7.14.5",
		"@babel/preset-react": "7.14.5",
		"@babel/preset-typescript": "7.14.5",
		"@electron-forge/cli": "6.0.0-beta.57",
		"@electron-forge/maker-deb": "6.0.0-beta.57",
		"@electron-forge/maker-rpm": "6.0.0-beta.57",
		"@electron-forge/maker-squirrel": "6.0.0-beta.57",
		"@electron-forge/maker-zip": "6.0.0-beta.57",
		"@electron-forge/plugin-webpack": "6.0.0-beta.57",
		"@marshallofsound/webpack-asset-relocator-loader": "0.5.0",
		"@testing-library/jest-dom": "5.14.1",
		"@testing-library/react": "11.2.7",
		"@types/electron-devtools-installer": "2.2.0",
		"@types/jest": "26.0.23",
		"@types/react": "17.0.11",
		"@types/react-dom": "17.0.8",
		"@types/styled-components": "5.1.10",
		"@typescript-eslint/eslint-plugin": "4.27.0",
		"@typescript-eslint/parser": "4.27.0",
		"babel-loader": "8.2.2",
		"cross-env": "7.0.3",
		"electron": "13.1.2",
		"electron-builder": "^22.11.7",
		"eslint": "7.29.0",
		"eslint-config-prettier": "8.3.0",
		"eslint-config-standard": "16.0.3",
		"eslint-plugin-import": "2.23.4",
		"eslint-plugin-node": "11.1.0",
		"eslint-plugin-prettier": "3.4.0",
		"eslint-plugin-promise": "5.1.0",
		"eslint-plugin-react": "7.24.0",
		"eslint-plugin-standard": "5.0.0",
		"file-loader": "^6.2.0",
		"jest": "27.0.4",
		"npm-run-all": "4.1.5",
		"prettier": "2.3.1",
		"ts-jest": "27.0.3",
		"typescript": "4.3.4",
		"wait-on": "5.3.0"
	},
	"config": {
		"forge": {
			"packagerConfig": {
				"name": "Calculadora de Horas",
				"executableName": "calculadora-de-horas",
				"icon": "./assets/favicon.ico",
				"extraResource": [
					"assets"
				]
			},
			"plugins": [
				[
					"@electron-forge/plugin-webpack",
					{
						"mainConfig": "./webpack/main.webpack.js",
						"renderer": {
							"config": "./webpack/renderer.webpack.js",
							"entryPoints": [
								{
									"html": "./public/index.html",
									"js": "./src/index.tsx",
									"name": "main_window",
									"preload": {
										"js": "./electron/bridge.ts"
									}
								}
							]
						}
					}
				]
			],
			"makers": [
				{
					"name": "@electron-forge/maker-zip"
				}
			]
		}
	}
}
